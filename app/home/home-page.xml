<Page class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd"
   
    >

    <ActionBar class="action-bar" style="background-color:#1e656d;" flat="true" >
        <Label class="action-bar-title" text="Easy Top Up - ML" style="color:#eee;font-family:Helvetica;font-size:22px"></Label>
    </ActionBar>

    <StackLayout style="padding:15;" orientation="vertical" horizontalAlignment="center" verticalAlignment="center">
        <StackLayout   style="margin-bottom:10;margin-top:10">
            <Label text="In simple Few Steps, Scan Your Top Up Card, And you are ready to go" textWrap="true" style="color:#38300A;text-align:center;font-family:Helvetica;font-size:16px"/> 
        </StackLayout>
        <StackLayout   style="margin-bottom:10;margin-top:10"> 
            <Button text="Scan" tap="onTap" style="background-color:#1e656d;color:#FFFFFF;font-family:Helvetica"></Button>
        </StackLayout>

        <StackLayout   style="margin-bottom:10;margin-top:10">
            <Label text="{{results}}" textWrap="true" style="color:#768591;text-align:center;font-family:Helvetica"/>
        </StackLayout>

        <StackLayout  style="margin-top:10;">
            <Label text="{{vocha}}"  textWrap="true" style="color:#f62a00;text-align:center;font-family:Helvetica"/>
        </StackLayout>
    </StackLayout>
</Page>
